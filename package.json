{
  "version": "0.3.1",
  "license": "MIT",
  "name": "normi",
  "author": "Colin McDonnell",
  "description": "A zero-config normalized cache for MobX",
  "repository": {
    "type": "git",
    "url": "https://github.com/vriad/normi"
  },
  "sideEffects": false,
  "bugs": {
    "url": "https://github.com/vriad/normi/issues"
  },
  "homepage": "https://github.com/vriad/normi",
  "keywords": [
    "mobx",
    "normalization",
    "normalized cache",
    "state management",
    "observables"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist/*",
    "start": "tsdx watch",
    "build": "npm run clean && tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepublishOnly": "tsdx build",
    "play": "nodemon -e ts -w src -x ts-node --project dev.tsconfig.json src/playground.ts",
    "buildplay": "nodemon -e ts -w src -x 'tsc --project dev.tsconfig.json && node dist/index.js'"
  },
  "peerDependencies": {
    "mobx": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/normi.esm.js",
  "devDependencies": {
    "husky": "^4.2.5",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5"
  }
}
